<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.psu.ist402.cleanride.UserDisplay"
    tools:showIn="@layout/activity_user_display">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cityMapUDisplay"
                android:visibility="visible"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/startingPoint" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="showUsers"
                android:id="@+id/showUserBtn"
                android:layout_gravity="center"
                android:text="Show All Nearby Users" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="navToHome"
                android:id="@+id/uDReturnHome"
                android:layout_gravity="center"
                android:text="Main" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>

